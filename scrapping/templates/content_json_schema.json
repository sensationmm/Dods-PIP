{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "contentSource": {
      "type": "string",
      "$comment": "Example - UK Parliament"
    },
    "sourceReferenceUri": {
      "type": "string",
      "$comment": "Example"
    },
    "createdDateTime": {
      "type": "string",
      "format": "date-time",
      "$comment": "YYYY:MM::DDThh:mm:ss.sTZD"
    },

    "originalContent": {
      "type": "string",
      "$comment": "This object is a key value store of the extracted content and will differ for each source."
    }
  },
  "required": [

    "sourceReferenceUri",
    "createdDateTime",
    "originalContent"
  ]
}